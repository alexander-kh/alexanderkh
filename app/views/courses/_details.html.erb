<div class="course-details">
  <%=
    link_to_if signed_in?, course.title, course_path(course) do
      link_to course.title, course.link, target: :_blank
    end
  %> | <%= course.platform %>
  <div class="small">
    <ul class="base-ul">
      <li class="edge">
        <%= link_to 'Certificate', course.certificate_url, target: :_blank %>
      </li>
    </ul>
  </div>
</div>
