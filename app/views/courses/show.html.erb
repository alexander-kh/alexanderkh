<div>
  <%= link_to @course.title, @course.link, target: :_blank %> |
  <%= @course.platform %>
</div>

<div>
  <%= link_to "Add a note", new_course_note_path(@course) %>
</div>

<%= render "notes", resource: @course %>

<div>
  <%= link_to 'Edit', edit_course_path(@course), class: 'button-primary' %>
  <%= link_to 'Remove', @course, method: :delete, class: 'button-remove',
     data: { confirm: "This action will remove all associated notes. Are you sure you want to delete this course?" } %>
</div>
<div class="nav-link-wrapper">
  <%= link_to 'Back', courses_path, class: 'nav-link' %>
</div>