<section>
  <h1 class="welcome"><%= t '.welcome' %></h1>
  <p><%= t '.about_me' %></p>
  <section>
    <h3><%= t '.stack' %></h3>
    <ul class="base-ul">
      <li><%= t '.front_end' %>: HTML (HAML, Slim), CSS (SASS), JavaScript</li>
      <li><%= t '.back_end' %>: Ruby, Ruby on Rails,
                                RSpec (<%= t '.testing_library'%>)</li>
      <li><%= t '.database' %>: PostgreSQL</li>
    </ul>
  </section>
</section>
<section>
  <header>
    <h3><%= t '.learning_path' %></h3>
  </header>
    <p><%= t '.books' %>:</p>
  <section class="books">
    <% books.each do |book| %>
      <%= render 'books/details', book: book %>
    <% end %>
  </section>
  <section class="courses">
    <p><%= t '.courses' %>:</p>
    <p>
    <% courses.each do |course| %>
      <%= render 'courses/details', course: course %>
    <% end %>
  </section>
</section>