<%= form_for book do |f| %>
  <% if book.errors.any? %>
    <div>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div>
    <%= f.label :link %>
    <%= f.url_field :link %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </div>
  <div>
    <%= f.label :publisher %>
    <%= f.text_field :publisher %>
  </div>
  <div>
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </div>
  <div>
    <%= f.label :pages %>
    <%= f.text_field :pages %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>