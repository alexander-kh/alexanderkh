<%= form_for book do |f| %>
  <% if book.errors.any? %>
    <div class='flash-alert'>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>
  <div>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div>
    <%= f.label :author %>
    <%= f.text_field :author, required: true %>
  </div>
  <div>
    <%= f.label :link %>
    <%= f.url_field :link, required: true %>
  </div>
  <div>
    <%= f.label :year %>
    <%= f.text_field :year, required: true %>
  </div>
  <div>
    <%= f.label :publisher %>
    <%= f.text_field :publisher, required: true %>
  </div>
  <div>
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </div>
  <div>
    <%= f.label :pages %>
    <%= f.text_field :pages %>
  </div>
  <div>
    <%= f.label :project %>
    <%= f.text_field :project_repo %>
  </div>
  <div>
    <%= f.radio_button :status, 'in_process' %>
    <%= f.label :status, 'in_process' %>
    <%= f.radio_button :status, 'completed' %>
    <%= f.label :status, 'completed' %>
  </div>
  <div>
    <%= f.submit %>
    <%= link_to_if book.new_record?, 'Cancel', books_path,
      class: 'button-primary' do
        link_to 'Cancel', book_path(book), class: 'button-primary'
      end %>
  </div>
<% end %>